<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<window>
  <id>34</id>
  <defaultcontrol>50</defaultcontrol>
  <allowoverlay>yes</allowoverlay>
  <disabletopbar>no</disabletopbar>
  <controls>
  
    <control>
      <description>Menu</description>
      <type>menu</type>
      <animation effect="fade" start="0" end="100" time="400" delay="200">WindowOpen</animation>
      <animation effect="fade" start="100" end="0" time="400" delay="200">WindowClose</animation>
      <id>50</id>
      <posX>674</posX>
      <posY>182</posY>
      <width>885</width>
      <textcolor>ffffffff</textcolor>
      <textColorNoFocus>50ffffff</textColorNoFocus>
      <buttonTextXOff>77</buttonTextXOff>
      <buttonTextYOff>0</buttonTextYOff>
      <buttonOffset>35</buttonOffset>
      <buttonFont>Segoe Light26</buttonFont>
      <buttonHeight>98</buttonHeight>
      <spaceBetweenButtons>11</spaceBetweenButtons>
      <numberOfButtons>5</numberOfButtons>
      <hoverX>0</hoverX>
      <hoverY>0</hoverY>
      <hoverWidth>-</hoverWidth>
      <hoverHeight>-</hoverHeight>
      <hoverKeepAspectratio>no</hoverKeepAspectratio>
      <scrollTime>140</scrollTime>
      <scrollTimeMin>60</scrollTimeMin>
      <onright>4</onright>
      <onleft>2</onleft>
    </control>
	
    <control>
      <description>background image</description>
      <id>1</id>
      <type>image</type>
      <width>1920</width>
      <height>1080</height>
      <texture>background.png</texture>
    </control>
	
    <import>common.time.xml</import>
	
    <!-- Date and Time -->
    <control>
      <description>Date label</description>
      <type>label</type>
      <posX>992</posX>
      <posY>984</posY>
      <width>702</width>
      <label>#date</label>
      <font>Segoe Light12</font>
      <animation effect="fade" start="0" end="100" time="400" delay="200">WindowOpen</animation>
      <animation effect="fade" start="100" end="0" time="400" delay="200">WindowClose</animation>
    </control>
	
    <control>
      <description>Time</description>
      <type>label</type>
      <animation effect="fade" time="250">WindowOpen</animation>
      <animation effect="fade" time="500">WindowClose</animation>
      <id>201</id>
      <posX>1128</posX>
      <posY>1080</posY>
      <label>#time</label>
      <align>left</align>
      <font>font12</font>
      <textcolor>6aa5cb</textcolor>
    </control>
	
    <!-- TOPBAR Buttons -->
    <control>
      <type>actiongroup</type>
      <description>action menu</description>
      <defaultcontrol>3</defaultcontrol>
      <onexit>0</onexit>
      <buttonX>0</buttonX>
      <buttonY>0</buttonY>
      <buttonwidth>148</buttonwidth>
      <buttonheight>1012</buttonheight>
      <width>281</width>
      <height>1080</height>
      <dimColor>00ffffff</dimColor>
      <control>
        <description>group element</description>
        <type>group</type>
        <animation effect="slide" time="450" start="-300,0" reversible="false">visible</animation>
        <animation effect="slide" time="450" end="-300,0" reversible="false">hidden</animation>
        <visible>!Control.HasFocus(50)</visible>
        <control>
          <description>group element</description>
          <type>group</type>
          <animation effect="slide" time="450" start="-300,0" reversible="false">visible</animation>
          <animation effect="slide" time="450" end="-300,0" reversible="false">hidden</animation>
          <posX>99</posX>
          <posY>210</posY>
          <visible>!Control.HasFocus(50)</visible>
          <control>
            <description>Exit Button</description>
            <type>button</type>
            <id>2</id>
            <posX>21</posX>
            <posY>351</posY>
            <onleft>3</onleft>
            <width>130</width>
            <height>135</height>
            <textureNoFocus>exit_button_nofocus.png</textureNoFocus>
            <textureFocus>exit_button_focus.png</textureFocus>
            <action>97</action>
            <onright>50</onright>
            <onup>5</onup>
            <ondown>3</ondown>
            <animation effect="zoom" start="100,100" end="125,125" center="0,0" time="400" acceleration="-0.9" reversible="false">focus</animation>
            <animation effect="zoom" start="125,125" end="100,100" center="0,0" time="400" acceleration="-0.9" reversible="false">unfocus</animation>
          </control>
          <control>
            <description>Shutdown Button</description>
            <type>button</type>
            <id>3</id>
            <posX>21</posX>
            <posY>492</posY>
            <width>130</width>
            <height>135</height>
            <textureNoFocus>shutdown_button_nofocus.png</textureNoFocus>
            <textureFocus>shutdown_button_focus.png</textureFocus>
            <action>99</action>
            <onright>50</onright>
            <onup>2</onup>
            <ondown>4</ondown>
            <animation effect="zoom" start="100,100" end="125,125" center="0,0" time="400" acceleration="-0.9" reversible="false">focus</animation>
            <animation effect="zoom" start="125,125" end="100,100" center="0,0" time="400" acceleration="-0.9" reversible="false">unfocus</animation>
          </control>
          <control>
            <description>Restart Button</description>
            <type>button</type>
            <id>4</id>
            <posX>21</posX>
            <posY>632</posY>
            <width>130</width>
            <height>135</height>
            <textureNoFocus>restart_button_nofocus.png</textureNoFocus>
            <textureFocus>restart_button_focus.png</textureFocus>
            <action>98</action>
            <onright>50</onright>
            <onup>3</onup>
            <ondown>5</ondown>
            <animation effect="zoom" start="100,100" end="125,125" center="0,0" time="400" acceleration="-0.9" reversible="false">focus</animation>
            <animation effect="zoom" start="125,125" end="100,100" center="0,0" time="400" acceleration="-0.9" reversible="false">unfocus</animation>
          </control>
          <control>
            <description>Sleepcontrol Button</description>
            <type>button</type>
            <id>5</id>
            <posX>21</posX>
            <posY>773</posY>
            <width>130</width>
            <height>135</height>
            <textureNoFocus>timer_button_unfocus.png</textureNoFocus>
            <textureFocus>timer_button_focus.png</textureFocus>
            <hyperlink>7969</hyperlink>
            <onright>901</onright>
            <visible>!string.equals(#SleepControl.Text,)+plugin.isenabled(Sleep Control)</visible>
            <onup>4</onup>
            <ondown>2</ondown>
            <label>#SkinTranslation.Translations.SleepControl.Label</label>
            <textXOff>-2000</textXOff>
            <animation effect="zoom" start="100,100" end="125,125" center="0,0" time="400" acceleration="-0.9" reversible="false">focus</animation>
            <animation effect="zoom" start="125,125" end="100,100" center="0,0" time="400" acceleration="-0.9" reversible="false">unfocus</animation>
          </control>
        </control>
      </control>
    </control>
	
    <!--Weather-->
    <control>
      <description>Weather image</description>
      <type>image</type>
      <id>1</id>
      <posX>850</posX>
      <posY>914</posY>
      <height>126</height>
      <width>126</width>
      <texture>Weather/128/#infoservice.weather.today.img.big.filenamewithext</texture>
      <visible>plugin.isenabled(InfoService)+string.contains(#maya.weather.visible,yes)</visible>
      <animation effect="fade" start="0" end="100" time="400" delay="200">WindowOpen</animation>
      <animation effect="fade" start="100" end="0" time="400" delay="200">WindowClose</animation>
    </control>
	
    <control>
      <description>Temp label</description>
      <type>label</type>
      <posX>990</posX>
      <posY>921</posY>
      <width>702</width>
      <label>#infoservice.weather.today.temp</label>
      <font>Segoe Light22</font>
      <visible>plugin.isenabled(InfoService)+string.contains(#maya.weather.visible,yes)</visible>
      <animation effect="fade" start="0" end="100" time="400" delay="200">WindowOpen</animation>
      <animation effect="fade" start="100" end="0" time="400" delay="200">WindowClose</animation>
    </control>
	
    <!--RSS-->
    <control>
      <description>RSS background</description>
      <type>image</type>
      <id>1</id>
      <posX>0</posX>
      <posY>1038</posY>
      <width>1920</width>
      <height>42</height>
      <texture>rss_bg.png</texture>
      <visible>plugin.isenabled(InfoService)+string.contains(#maya.rss.visible,yes)</visible>
      <animation effect="slide" start="0,100" end="0,0" tween="quadratic" easing="in" time="400" delay="100">WindowOpen</animation>
      <animation effect="slide" end="0,100" tween="quadratic" easing="in" time="400" delay="150">WindowClose</animation>
    </control>
	
    <control>
      <description>RSS image</description>
      <type>image</type>
      <id>1</id>
      <posX>0</posX>
      <posY>879</posY>
      <width>196</width>
      <height>49</height>
      <keepaspectratio>no</keepaspectratio>
      <texture>#rssimg</texture>
      <visible>plugin.isenabled(InfoService)+string.contains(#maya.rss.visible,yes)</visible>
      <animation effect="slide" start="0,100" end="0,0" tween="quadratic" easing="in" time="400" delay="100">WindowOpen</animation>
      <animation effect="slide" end="0,100" tween="quadratic" easing="in" time="400" delay="150">WindowClose</animation>
    </control>
	
    <control>
      <description>RSS items</description>
      <type>fadelabel</type>
      <id>1</id>
      <posX>21</posX>
      <posY>1045</posY>
      <width>1877</width>
      <height>42</height>
      <font>font10</font>
      <textcolor>6aa5cb</textcolor>
      <label>#infoservice.feed.titles</label>
      <visible>plugin.isenabled(InfoService)+string.contains(#maya.rss.visible,yes)</visible>
      <animation effect="slide" start="0,100" end="0,0" tween="quadratic" easing="in" time="400" delay="100">WindowOpen</animation>
      <animation effect="slide" end="0,100" tween="quadratic" easing="in" time="400" delay="150">WindowClose</animation>
    </control>

	<control>
      <animation effect="slide" start="-60,0" end="0,0" tween="quadratic" easing="in" time="400" delay="600">WindowOpen</animation>
      <animation effect="slide" start="0,0" end="-60,0" tween="quadratic" easing="in" time="400" delay="100">WindowClose</animation>
	  <id>1</id>
	  <type>image</type>
	  <posX>0</posX>
	  <posY>440</posY>
	  <width>64</width>
	  <height>199</height>
	  <texture>hiddenmenu_tab.png</texture>
	  <visible>![Control.HasFocus(2) | Control.HasFocus(3) | Control.HasFocus(4) | Control.HasFocus(5)]</visible>
	</control>
	
    <import>common.home.overlay.xml</import>
	
  </controls>
</window>