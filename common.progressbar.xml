<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<window>
<controls>

	<control>
		<type>image</type>
		<description>Dummy image</description>
		<id>105</id>
		<posX>-2000</posX>
		<posY>12</posY>
		<width>1252</width>
		<height>60</height>
		<texture>osd_bg_top.png</texture>
	</control>

	<control>
		<type>image</type>
		<description>OSD Background</description>
		<id>994</id>
		<posX>179</posX>
		<posY>648</posY>
		<width>1008</width>
		<height>81</height>
		<texture>osd_bg.png</texture>
		<visible>window.isvisible(2005) + [window.isosdvisible|control.isvisible(105)|player.paused|player.rewinding|player.forwarding|player.seeking]</visible>
	</control>

	<control>
		<type>progress</type>
		<description>Track Progress</description>
		<id>996</id>
		<posX>179</posX>
		<posY>700</posY>
		<width>1008</width>
		<height>12</height>
		<label>#percentage</label>
		<texturebg>-</texturebg>
		<lefttexture>osd_progress_left.png</lefttexture>
		<midtexture>osd_progress_mid.png</midtexture>
		<righttexture>osd_progress_right.png</righttexture>
		<visible>window.isosdvisible|control.isvisible(105)</visible>
	</control>

	<control>
		<description>Start Time Info</description>
		<type>label</type>
		<id>997</id>
		<posX>215</posX>
		<posY>667</posY>
		<label>#currentplaytime</label>
		<align>left</align>
		<font>font12</font>
		<visible>window.isosdvisible|control.isvisible(105)|player.paused|player.rewinding|player.forwarding|player.seeking</visible>
	</control>

	<control>
		<description>End Time Info</description>
		<type>label</type>
		<id>998</id>
		<posX>1152</posX>
		<posY>667</posY>
		<label>#duration</label>
		<align>right</align>
		<font>font12</font>
		<visible>window.isosdvisible|control.isvisible(105)|player.paused|player.rewinding|player.forwarding|player.seeking</visible>
	</control>

	<control>
		<type>label</type>
		<id>999</id>
		<description>Pause</description>
		<posX>633</posX>
		<posY>662</posY>
		<height>30</height>
		<width>100</width>
		<font>font14</font>
		<align>center</align>
		<label>Pause</label>
		<visible>[window.isosdvisible+player.paused]|[!window.isosdvisible+player.paused]</visible>
	</control>

	<control>
		<type>image</type>
		<id>999</id>
		<description>Clock icon</description>
		<posX>617</posX>
		<posY>667</posY>
		<height>21</height>
		<width>21</width>
		<texture>osd_clock_icon.png</texture>
		<visible>window.isosdvisible+player.playing</visible>
	</control>

	<control>
		<type>label</type>
		<id>999</id>
		<description>Clock</description>
		<posX>633</posX>
		<posY>662</posY>
		<height>30</height>
		<width>100</width>
		<font>font14</font>
		<align>center</align>
		<label>#time</label>
		<visible>window.isosdvisible+player.playing</visible>
	</control>

	<control>
		<description>TV Logo</description>
		<type>image</type>
		<id>9999</id>
		<posX>212</posX>
		<posY>560</posY>
		<width>80</width>
		<height>90</height>
		<texture>#Play.Current.Thumb</texture>
		<keepaspectratio>yes</keepaspectratio>
		<visible>window.isosdvisible</visible>
	</control>

</controls>
</window>
