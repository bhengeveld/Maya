<window>
<id>880</id>
<defaultcontrol>50</defaultcontrol>
<allowoverlay>yes</allowoverlay>
<define>#header.label:30000</define>
  
  <controls>
  
<import>common.window.xml</import>

	<control>
		<animation effect="fade" time="100">WindowOpen</animation>
		<animation effect="fade" time="100">WindowClose</animation>
		<type>label</type>
		<id>1</id>
		<posX>552</posX>
		<posY>30</posY>
		<width>500</width>
		<height>100</height>
		<label>music videos</label>
		<textcolor>6aa5cb</textcolor>
		<font>Segoe Light40</font>
	</control>
	
	<control>
      <description>Video Count</description>
      <type>label</type>
      <id>15</id>
      <posX>800</posX>
      <posY>500</posY>
      <font>font12</font>
       <label>#MusicVids.TotalVideos</label>
    </control>

    <control>
      <description>Artist Count</description>
      <type>label</type>
      <id>16</id>
      <posX>550</posX>
      <posY>500</posY>
      <font>font12</font>
      <label>#MusicVids.TotalArtists</label>
    </control>

    <control>
      <description>Music Vids Hierachy</description>
      <type>label</type>
      <id>10</id>
      <posX>12000</posX>
      <posY>12000</posY>
      <label>#MusicVids.Hierachy</label>
      <font>font14</font>
      <textcolor>ffffffff</textcolor>
    </control>
	
	<control>
		<description>Selected item Label</description>
		<type>fadelabel</type>
		<id>11</id>
		<posX>555</posX>
		<posY>130</posY>
		<width>700</width>
		<label>#MusicVids.ArtistName</label>
		<font>Segoe Light22</font>
		<animation effect="fade" time="200">WindowOpen</animation>
		<animation effect="fade" time="200">WindowClose</animation>
	</control>
	
	<control>
      <description>Artist Image</description>
      <type>image</type>
	  <visible>!control.isvisible(99)</visible>
      <id>13</id>
      <posX>70</posX>
      <posY>150</posY>
	  <width>430</width>
	  <height>300</height>
	  <keepaspectratio>true</keepaspectratio>
	  <centered>yes</centered>
      <texture flipY="true" diffuse="Thumb_Mask.png">#MusicVids.ArtistImg</texture>
	  <animation effect="fade" time="1000" delay="100">WindowOpen</animation>
      <animation effect="fade" time="500">WindowClose</animation>
	</control>
		
	<control>
      <description>Artist Biography</description>
      <type>textboxscrollup</type>
      <id>12</id>
	  <font>font12</font>
      <posX>650</posX>
      <posY>540</posY>
	  <width>480</width>
	  <height>150</height>
      <label>#MusicVids.ArtistBio</label>
    </control>
	
	<control>
      <description>Fan Art</description>
      <type>image</type>
      <id>1</id>
      <posX>0</posX>
      <posY>0</posY>
      <width>1366</width>
      <height>768</height>
      <texture>#MusicVids.ArtistImg</texture>
	  <colordiffuse>10ffffff</colordiffuse>
      <visible>control.isvisible(99)</visible>
	  <animation effect="fade" time="500" delay="500">WindowOpen</animation>
      <animation effect="fade" time="500">WindowClose</animation>
    </control>
	
		
		<control>
      <description>Video Thumb</description>
      <type>image</type>
	  <visible>control.isvisible(99)</visible>
      <id>14</id>
      <posX>70</posX>
      <posY>150</posY>
	  <width>430</width>
	  <height>300</height>
	  <keepaspectratio>true</keepaspectratio>
	  <centered>yes</centered>
      <texture flipY="true" diffuse="Thumb_Mask.png">#MusicVids.VideoImg</texture>
    </control>
	
	
	<control>
		<description>Dummy label indicating artist/video view</description>
		<type>label</type>
		<id>99</id>
		<posX>0</posX>
		<posY>0</posY>
		<label></label>
	</control>
	
	
  
<import>common.facade.music.xml</import>

	<control>
      <type>actiongroup</type>
      <description>action menu</description>
      <defaultcontrol>2</defaultcontrol>
      <onexit>0</onexit>
      <buttonX>0</buttonX>
      <buttonY>0</buttonY>
      <buttonwidth>106</buttonwidth>
      <buttonheight>720</buttonheight>
      <textureFocus>Action_focus.png</textureFocus>
      <textureNoFocus>Action_nofocus.png</textureNoFocus>
      <width>568</width>
      <height>720</height>
      <dimColor>00ffffff</dimColor>
      <control>
        <type>image</type>
        <posX>26</posX>
        <posY>78</posY>
        <width>367</width>
        <height>591</height>
        <texture>Backslide.png</texture>
        <colorDiffuse>fffffffff</colorDiffuse>
        <visible>!Control.HasFocus(50)</visible>
        <animation effect="slide" time="450" start="-300,0" reversible="false">visible</animation>
        <animation effect="slide" time="450" end="-300,0" reversible="false">hidden</animation>
      </control>
      
  <control>
        <type>group</type>
        <description>group element</description>
        <visible>!Control.HasFocus(50)</visible>
        <animation effect="slide" time="450" start="-300,0" reversible="false">visible</animation>
        <animation effect="slide" time="450" end="-300,0" reversible="false">hidden</animation>
        <posX>70</posX>
        <posY>130</posY>
        <layout>StackLayout</layout>
     
      <control>
        <description>Random</description>
        <type>button</type>
        <id>2</id>
        <onleft>2</onleft>
        <onright>50</onright>
        <onup>4</onup>
        <ondown>3</ondown>
        <label>Play All (Random)</label>
      </control>

	<control>
        <description>Smart Playlist</description>
        <type>button</type>
        <id>3</id>
        <onleft>3</onleft>
        <onright>50</onright>
        <onup>2</onup>
        <ondown>4</ondown>
        <label>Smart Playlist</label>        
      </control>

     <control>
        <description>Playlist</description>
        <type>button</type>
        <id>4</id>
        <onleft>4</onleft>
        <onright>50</onright>
        <onup>3</onup>
        <ondown>2</ondown>
        <label>Playlist</label>
      </control>
     </control>

    <control>
      <description>Most Played Video Label</description>
      <type>label</type>
      <label>Most Played Video</label>
	  <font>font10</font>
      <id>1</id>
      <posX>75</posX>
      <posY>280</posY>
	  <width>255</width>
	  <align>center</align>
       <visible>!Control.HasFocus(50)</visible>
        <animation effect="slide" time="450" start="-300,0" reversible="false">visible</animation>
        <animation effect="slide" time="450" end="-300,0" reversible="false">hidden</animation>
    </control>

	
	    <control>
      <description>Favorite Vid</description>
      <type>image</type>
      <id>18</id>
      <posX>100</posX>
      <posY>305</posY>
	  <width>200</width>
	  <height>90</height>
      <texture flipY="true" diffuse="Thumb_Mask.png">#MusicVids.MostPlayedThumb</texture>
      <keepaspectratio>no</keepaspectratio>
	         <visible>!Control.HasFocus(50)</visible>
        <animation effect="slide" time="450" start="-300,0" reversible="false">visible</animation>
        <animation effect="slide" time="450" end="-300,0" reversible="false">hidden</animation>
    </control>
	
    <control>
      <description>Favorite Vid label</description>
      <type>label</type>
      <id>17</id>
      <posX>75</posX>
      <posY>420</posY>
      <width>255</width>
      <font>font10</font>
	 <align>center</align>
      <label>#MusicVids.MostPlayed</label>
       <visible>!Control.HasFocus(50)</visible>
        <animation effect="slide" time="450" start="-300,0" reversible="false">visible</animation>
        <animation effect="slide" time="450" end="-300,0" reversible="false">hidden</animation>
    </control>

    <control>
      <description>Favorite Artist Static</description>
      <type>label</type>
      <label>Most Played Artist</label>
      <font>font10</font>
	  <id>1</id>
      <posX>75</posX>
      <posY>480</posY>
	  <width>255</width>
	  <align>center</align>
       <visible>!Control.HasFocus(50)</visible>
        <animation effect="slide" time="450" start="-300,0" reversible="false">visible</animation>
        <animation effect="slide" time="450" end="-300,0" reversible="false">hidden</animation>
    </control>


    <control>
      <description>Favorite Artist</description>
      <type>image</type>
	  <id>20</id>
      <width>115</width>     
      <posX>100</posX>
      <posY>500</posY>
	  <width>200</width>
	  <height>90</height>
      <texture flipY="true" diffuse="Thumb_Mask.png">#MusicVids.FavArtistThumb</texture>
	  <keepaspectratio>yes</keepaspectratio>     
       <visible>!Control.HasFocus(50)</visible>
	   <centered>yes</centered>
        <animation effect="slide" time="450" start="-300,0" reversible="false">visible</animation>
        <animation effect="slide" time="450" end="-300,0" reversible="false">hidden</animation>
    </control>
	
	 <control>
      <description>Favorite Artist</description>
      <type>label</type>
      <label></label>
      <id>19</id>
      <posX>75</posX>
      <posY>615</posY>
	  <width>255</width>
      <font>font10</font>
	 <align>center</align>
      <label>#MusicVids.FavArtist</label>
       <visible>!Control.HasFocus(50)</visible>
        <animation effect="slide" time="450" start="-300,0" reversible="false">visible</animation>
        <animation effect="slide" time="450" end="-300,0" reversible="false">hidden</animation>
    </control>

  </control>

	<control>
  <description>Sort Label Overlay</description> 
  <type>label</type> 
  <id>22</id> 
  <posX>1250</posX> 
  <posY>550</posY> 
  <label>#MusicVids.Sort</label> 
  <align>right</align> 
  <font>font32</font> 
  <textcolor>20ffffff</textcolor> 
  </control>

  </controls>
</window>