<window>
  <id>30</id>
  <defaultcontrol>2</defaultcontrol>
  <allowoverlay>no</allowoverlay>
  <controls>
    <import>common.window.xml</import>
	
    <control>
        <animation effect="fade" time="100">WindowOpen</animation>
        <animation effect="fade" time="100">WindowClose</animation>
        <type>label</type>
        <id>1</id>
        <posX>155</posX>
        <posY>30</posY>
        <width>500</width>
        <height>100</height>
        <label>television</label>
        <textcolor>6aa5cb</textcolor>
        <font>Segoe Light40</font>
    </control>

    <control>
        <type>group</type>
        <layout>StackLayout(4)</layout>
        <description>group element</description>
        <animation effect="fade" time="250">WindowOpen</animation>
        <animation effect="fade" time="250">WindowClose</animation>
        <posX>200</posX>
        <posY>180</posY>
      <control>
        <description>TVGuide</description>
        <type>button</type>
        <id>2</id>
        <label>TV Guide</label>
		<textalign>right</textalign>
        <onup>8</onup>
        <ondown>3</ondown>
      </control>
      <control>
        <description>Search TVGuide</description>
        <type>button</type>
        <id>3</id>
        <label>Search</label>
		<textalign>right</textalign>
        <onup>2</onup>
        <ondown>4</ondown>
      </control>
      <control>
        <description>Recordings</description>
        <type>button</type>
        <id>4</id>
        <label>Recorded TV</label>
		<textalign>right</textalign>
        <onup>3</onup>
        <ondown>5</ondown>
      </control>
      <control>
        <description>Channel button</description>
        <type>button</type>
        <id>5</id>
        <label>602</label>
		<textalign>right</textalign>
        <onup>4</onup>
        <ondown>6</ondown>
        <onright>99</onright>
      </control>
      <control>
        <description>TV On/Off button</description>
        <type>togglebutton</type>
        <id>6</id>
        <label>707</label>
		<textalign>right</textalign>
        <onup>5</onup>
        <ondown>7</ondown>
        <onright>99</onright>
		<AltTextureFocus>togglebutton-off-focus.png</AltTextureFocus>
			<AltTextureNoFocus>togglebutton-off-nofocus.png</AltTextureNoFocus>
			<textureFocus>togglebutton-on-focus.png</textureFocus>
			<textureNoFocus>togglebutton-on-nofocus.png</textureNoFocus>
      </control>
      <control>
        <description>UpcomingPrograms</description>
        <type>button</type>
        <id>7</id>
        <label>Upcoming Programs</label>
		<textalign>right</textalign>
        <onup>6</onup>
        <ondown>8</ondown>
      </control>
      <control>
        <description>ActiveRecordings</description>
        <type>button</type>
        <id>8</id>
        <label>Active Recordings</label>
		<textalign>right</textalign>
        <onup>7</onup>
        <ondown>2</ondown>
      </control>
      <!--<control>
        <description>Schedules</description>
        <type>button</type>
        <id>6</id>
        <label>Schedules</label>
        <onup>5</onup>
        <ondown>2</ondown>
      </control>-->
    </control>
       <control>
        <description>TV background</description>
        <type>image</type>
        <id>1</id>
        <posX>515</posX>
        <posY>20</posY>
        <width>753</width>
        <height>480</height>
        <texture>tvhome_tvframe_big.png</texture>
        <animation effect="fade" time="250">WindowOpen</animation>
        <animation effect="fade" time="250">WindowClose</animation>
    </control>

    <control>
        <description>video window</description>
        <type>videowindow</type>
        <id>99</id>
        <posX>578</posX>
        <posY>86</posY>
        <width>624</width>
        <height>350</height>
        <onleft>2</onleft>
        <onright>2</onright>
        <action>18</action>
        <textureFocus>tv_green_border.png</textureFocus>
        <animation effect="fade" time="250">WindowOpen</animation>
        <animation effect="fade" time="250">WindowClose</animation>
    </control>
    <control>
      <description>Progress background</description>
      <type>image</type>
      <id>1</id>
      <posX>-2000</posX>
      <posY>501</posY>
      <width>502</width>
      <height>12</height>
      <texture>osd_progress_background.png</texture>
    </control>
    <control>
      <description>progress bar</description>
      <type>progress</type>
      <id>20</id>
      <posX>-2000</posX>
      <posY>501</posY>
      <width>527</width>
      <height>12</height>
      <label>#Radio.View.Percentage</label>
      <visible>yes</visible>
    </control>
      <control>
        <description>Current program title</description>
        <type>fadelabel</type>
        <id>13</id>
        <posX>560</posX>
        <posY>500</posY>
        <width>750</width>
        <label>#Radio.View.title</label>
        <font>Segoe Light32</font>
        <align>left</align>
        <textcolor>ffffff</textcolor>
        <animation effect="fade" time="250">WindowOpen</animation>
        <animation effect="fade" time="250">WindowClose</animation>
    </control>
    <control>
      <description>Channel label</description>
      <type>label</type>
      <id>13</id>
      <posX>-2000</posX>
      <posY>590</posY>
      <label>602</label>
      <font>font13</font>
      <align>right</align>
    </control>
	
     <control>
        <description>Play info label</description>
        <type>fadelabel</type>
        <id>1</id>
        <width>266</width>
        <height>37</height>
        <posX>562</posX>
        <posY>480</posY>
        <label>#Radio.View.channel - #Radio.View.start - #Radio.View.stop</label>
        <align>left</align>
        <font>font16</font>
        <textcolor>ff85cffe</textcolor>
        <animation effect="fade" time="250">WindowOpen</animation>
        <animation effect="fade" time="250">WindowClose</animation>
    </control>
	
    <control>
      <description>Current Channelname</description>
      <type>fadelabel</type>
      <id>13</id>
      <posX>-2000</posX>
      <posY>620</posY>
      <width>400</width>
      <label>#Radio.View.channel</label>
      <font>font13</font>
      <align>right</align>
      <textcolor>ffa9d0f7</textcolor>
    </control>
	
    <control>
        <description>Description1</description>
        <type>textboxscrollup</type>
        <id>15</id>
        <posX>560</posX>
        <posY>580</posY>
        <width>750</width>
        <height>137</height>
        <seperator>----------------------------------------------------------------------------------------------</seperator>
        <label>#Radio.View.description</label>
        <animation effect="fade" time="250">WindowOpen</animation>
        <animation effect="fade" time="250">WindowClose</animation>
    </control>
