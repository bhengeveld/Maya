      <posY>245</posY>
      <label>#Radio.Record.channel\r#Radio.Record.title\r#Radio.Record.start-#Radio.Record.stop</label>
      <font>font12</font>
    </control>
    <control>
      <description>record pin</description>
      <type>image</type>
      <id>24</id>
