<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<window>
  <id>2000</id>
  <defaultcontrol>3</defaultcontrol>
  <allowoverlay>no</allowoverlay>
  <controls>
  
    <control>
      <description>background image</description>
      <type>image</type>
      <id>1</id>
      <width>1920</width>
      <height>1080</height>
    </control>
	
    <import>common.time.xml</import>
	
    <control>
      <description>Select text label</description>
      <type>label</type>
      <id>4</id>
      <posX>775</posX>
      <posY>42</posY>
      <width>702</width>
      <height>140</height>
      <textcolor>6aa5cb</textcolor>
      <font>Segoe Light40</font>
      <label>181</label>
      <animation effect="fade" time="250">WindowOpen</animation>
      <animation effect="fade" time="250">WindowClose</animation>
    </control>
	
    <control>
      <description>Number of Files Label</description>
      <type>label</type>
      <id>1</id>
      <posX>1589</posX>
      <posY>970</posY>
      <align>right</align>
      <label>#itemcount</label>
      <textcolor>6aa5cb</textcolor>
      <animation effect="fade" time="250">WindowOpen</animation>
      <animation effect="fade" time="250">WindowClose</animation>
    </control>
    <control>
      <description>Objects Label</description>
      <type>label</type>
      <id>1</id>
      <posX>1709</posX>
      <posY>970</posY>
      <align>right</align>
      <label>127</label>
      <textcolor>6aa5cb</textcolor>
      <animation effect="fade" time="250">WindowOpen</animation>
      <animation effect="fade" time="250">WindowClose</animation>
    </control>
    <control>
      <description>listcontrol background</description>
      <type>image</type>
      <id>1</id>
      <posX>736</posX>
      <posY>215</posY>
      <width>1019</width>
      <height>677</height>
      <texture>listcontrol_bg.png</texture>
      <animation effect="fade" time="100">WindowOpen</animation>
      <animation effect="fade" time="100">WindowClose</animation>
    </control>
    <control>
      <description>listcontrol background info</description>
      <type>image</type>
      <id>1</id>
      <posX>736</posX>
      <posY>953</posY>
      <width>1019</width>
      <height>71</height>
      <texture>listcontrol_bg_info.png</texture>
      <animation effect="fade" time="100">WindowOpen</animation>
      <animation effect="fade" time="100">WindowClose</animation>
    </control>
    <control>
      <description>Selected item Label</description>
      <type>label</type>
      <id>1</id>
      <posX>780</posX>
      <posY>199</posY>
      <width>983</width>
      <font>Segoe Light22</font>
      <label>#selecteditem</label>
      <animation effect="fade" time="250">WindowOpen</animation>
      <animation effect="fade" time="250">WindowClose</animation>
      <valign>middle</valign>
    </control>
    <control>
      <description>albums listcontrol</description>
      <type>listcontrol</type>
      <id>3</id>
      <onleft>5</onleft>
      <onright>5</onright>
      <onup>5</onup>
      <ondown>5</ondown>
      <scrollOffset>1</scrollOffset>
      <posY>257</posY>
      <height>632</height>
      <textXOff>30</textXOff>
      <animation effect="fade" time="250">WindowOpen</animation>
      <animation effect="fade" time="250">WindowClose</animation>
    </control>
    <control>
      <description>IMDB</description>
      <type>button</type>
      <id>5</id>
      <posX>99</posX>
      <posY>170</posY>
      <label>368</label>
      <onleft>3</onleft>
      <onright>3</onright>
      <onup>21</onup>
      <ondown>3</ondown>
      <animation effect="fade" time="250">WindowOpen</animation>
      <animation effect="fade" time="250">WindowClose</animation>
    </control>
  </controls>
</window>