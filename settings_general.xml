<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<window>
<id>705</id>
<defaultcontrol>10</defaultcontrol>
<allowoverlay>yes</allowoverlay>
<define>#header.label:128</define>
<define>#header.image:settings_logo.png</define>
<define>#header.hover:hover_settings.png</define>
<controls>
	<import>common.settings.xml</import>
	<control>
		<description>buttons</description>
		<type>group</type>
		<animation effect="fade" time="250">WindowOpen</animation>
		<animation effect="fade" time="250">WindowClose</animation>
		<posX>99</posX>
		<posY>190</posY>
		<layout>StackLayout</layout>
		<control>
			<description>Skin</description>
			<type>button</type>
			<id>10</id>
			<label>166</label>
			<onup>17</onup>
			<textureFocus>button_wide_focus.png</textureFocus>
			<width>300</width>
			<textalign>right</textalign>
		</control>

		<control>
			<description>Language</description>
			<type>selectbutton</type>
			<id>11</id>
			<label>248</label>
			<width>300</width>
			<textalign>right</textalign>
		</control>

		<control>
			<description>Start in fullscreen mode</description>
			<type>togglebutton</type>
			<id>12</id>
			<label>1047</label>
			<width>300</width>
			<textalign>right</textalign>
			<textureFocus>togglebutton_wide_on_focus.png</textureFocus>
		<textureNoFocus>togglebutton_wide_on_nofocus.png</textureNoFocus>
		<AltTextureFocus>togglebutton_wide_off_focus.png</AltTextureFocus>
		<AltTextureNoFocus>togglebutton_wide_off_nofocus.png</AltTextureNoFocus>
		</control>

		<control>
			<description>Screensaver</description>
			<type>togglebutton</type>
			<id>13</id>
			<label>360</label>
			<width>300</width>
			<textalign>right</textalign>
			<textureFocus>togglebutton_wide_on_focus.png</textureFocus>
		<textureNoFocus>togglebutton_wide_on_nofocus.png</textureNoFocus>
		<AltTextureFocus>togglebutton_wide_off_focus.png</AltTextureFocus>
		<AltTextureNoFocus>togglebutton_wide_off_nofocus.png</AltTextureNoFocus>
		</control>

		<control>
			<description>Skip steps screen button</description>
			<type>button</type>
			<id>21</id>
			<label>6024</label>
			<width>300</width>
			<textalign>right</textalign>
			<hyperlink>708</hyperlink>
			<ondown>99</ondown>
		</control>

	</control>

	<control>
		<description>Skin Preview</description>
		<type>image</type>
		<id>20</id>
		<animation effect="fade" time="250">WindowOpen</animation>
		<animation effect="fade" time="250">WindowClose</animation>
		<posX>499</posX>
		<posY>163</posY>
		<width>711</width>
		<height>375</height>
		<texture/>
	</control>

</controls>
</window>
