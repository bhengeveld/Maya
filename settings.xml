<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<window>
    <id>4</id>
    <defaultcontrol>10001</defaultcontrol>
    <allowoverlay>yes</allowoverlay>
	<define>#header.label:897</define>  
    <define>#header.background:hover_settings.png</define>
  <controls>
  
    <control>
      <description>Background</description>
      <type>image</type>
      <id>1</id>
      <posX>0</posX>
      <posY>0</posY>
      <width>1920</width>
      <height>1080</height>
      <texture>background.png</texture>
      <visible>!string.contains(#MayaHD.bgImage.Plugins,yes)</visible>
    </control>
	
    <control>
      <description>Fanart Background</description>
      <type>image</type>
      <id>0</id>
      <posX>0</posX>
      <posY>0</posY>
      <width>1920</width>
      <height>1080</height>
      <texture>#header.background</texture>
      <visible>string.contains(#MayaHD.bgImage.Plugins,yes)</visible>
    </control>
	
    <control>
      <description>Fanart Overlay</description>
      <type>image</type>
      <id>0</id>
      <posX>0</posX>
      <posY>0</posY>
      <width>1920</width>
      <height>1080</height>
      <texture>basichome_fanart_overlay.png</texture>
      <visible>string.contains(#MayaHD.bgImage.Plugins,yes)</visible>
    </control>

    <control>
      <id>1</id>
      <type>label</type>
      <description>Header label</description>
      <posX>185</posX>
      <posY>28</posY>
      <width>600</width>
      <label>#header.label</label>	  
      <font>Segoe Light22</font>
      <textcolor>ff6aa5cb</textcolor>
      <animation effect="Fade" time="200">WindowOpen</animation>
      <animation effect="Fade" time="200">WindowClose</animation>
    </control>
	
	<import>settings.menu.xml</import>
    <import>common.time.xml</import>	
	
  </controls>
</window>