<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<window>
    <id>614</id>
    <defaultcontrol>3</defaultcontrol>
    <allowoverlay>no</allowoverlay>
    <controls>
        <control>
            <id>1</id>
            <description>background image</description>
            <type>image</type>
            <width>1366</width>
            <height>768</height>
        </control>
        <import>common.time.xml</import>
        <control>
            <id>1</id>
            <type>label</type>
            <posX>552</posX>
            <posY>30</posY>
            <width>500</width>
            <height>66</height>
            <font>Segoe Light40</font>
            <textcolor>ff6aa5cb</textcolor>
            <label>Artist Info</label>
            <animation effect="Fade" time="100">WindowOpen</animation>
            <animation effect="Fade" time="100">WindowClose</animation>
            <valign>middle</valign>
        </control>
        <control>
            <id>1</id>
            <description>Actor Name value</description>
            <type>fadelabel</type>
            <posX>555</posX>
            <posY>100</posY>
            <width>700</width>
            <font>Segoe Light22</font>
            <label>#Actor.Name</label>
            <animation effect="Fade" time="250">WindowOpen</animation>
            <animation effect="Fade" time="250">WindowClose</animation>
        </control>
        <control>
            <id>1</id>
            <description>Born</description>
            <type>label</type>
            <posX>555</posX>
            <posY>153</posY>
            <font>font13</font>
            <textcolor>ffb2d4f5</textcolor>
            <label>686</label>
            <animation effect="Fade" time="250">WindowOpen</animation>
            <animation effect="Fade" time="250">WindowClose</animation>
        </control>
        <control>
            <id>1</id>
            <description>Date of Birth</description>
            <type>fadelabel</type>
            <posX>924</posX>
            <posY>153</posY>
            <width>365</width>
            <font>font13</font>
            <textcolor>ffffffff</textcolor>
            <label>#Actor.DateOfBirth #Actor.PlaceOfBirth</label>
            <animation effect="Fade" time="250">WindowOpen</animation>
            <animation effect="Fade" time="250">WindowClose</animation>
        </control>
        <control>
            <description>group element</description>
            <type>group</type>
            <posX>71</posX>
            <posY>121</posY>
            <layout>StackLayout(4)</layout>
            <animation effect="Fade" time="250">WindowOpen</animation>
            <animation effect="Fade" time="250">WindowClose</animation>
            <control>
                <id>3</id>
                <description>Biography</description>
                <type>togglebutton</type>
                <onleft>22</onleft>
                <onright>22</onright>
                <onup>2</onup>
                <ondown>4</ondown>
                <posY>340</posY>
                <label>1011</label>
                <textalign>RIGHT</textalign>
            </control>
            <control>
                <id>4</id>
                <description>Movies</description>
                <type>togglebutton</type>
                <onleft>22</onleft>
                <onright>22</onright>
                <onup>3</onup>
                <ondown>5</ondown>
                <textureFocus>togglebutton-on-focus.png</textureFocus>
                <textureNoFocus>togglebutton-on-nofocus.png</textureNoFocus>
                <label>342</label>
                <textalign>RIGHT</textalign>
                <AltTextureFocus>togglebutton-off-focus.png</AltTextureFocus>
                <AltTextureNoFocus>togglebutton-off-nofocus.png</AltTextureNoFocus>
            </control>
        </control>
        <control>
            <id>20</id>
            <description>Biography value</description>
            <type>textboxscrollup</type>
            <posX>555</posX>
            <posY>185</posY>
            <width>725</width>
            <height>482</height>
            <animation effect="Fade" time="250">WindowOpen</animation>
            <animation effect="Fade" time="250">WindowClose</animation>
            <label>#Actor.Biography</label>
            <font>font13</font>
            <textcolor>FFFFFFFF</textcolor>
        </control>
        <control>
            <id>21</id>
            <description>Image logo</description>
            <type>image</type>
            <colordiffuse>ffffffff</colordiffuse>
            <posX>71</posX>
            <posY>225</posY>
            <width>177</width>
            <height>125</height>
            <texture>#thumb</texture>
            <animation effect="Fade" time="250">WindowOpen</animation>
            <animation effect="Fade" time="250">WindowClose</animation>
            <colorkey>FFFF00FF</colorkey>
            <keepaspectratio>yes</keepaspectratio>
        </control>
        <control>
            <id>22</id>
            <description>textarea</description>
            <type>textbox</type>
            <onleft>4</onleft>
            <onright>4</onright>
            <onup>4</onup>
            <ondown>4</ondown>
            <posX>555</posX>
            <posY>185</posY>
            <width>725</width>
            <height>482</height>
            <spinPosX>550</spinPosX>
            <spinPosY>718</spinPosY>
            <animation effect="Fade" time="250">WindowOpen</animation>
            <animation effect="Fade" time="250">WindowClose</animation>
            <label>#Actor.Movies</label>
        </control>
        <import>common.overlay.xml</import>
    </controls>
</window>
