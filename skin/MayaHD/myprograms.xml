<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<window>
  <id>3</id>
  <defaultcontrol>6</defaultcontrol>
  <allowoverlay>yes</allowoverlay>
  <define>#header.label:#curheader</define>
  <define>#header.background:hover_my programs.png</define>
  <controls>
  
    <import>common.window.background.xml</import>
    <import>common.time.xml</import>
	
    <control>
      <id>1</id>
      <type>label</type>
      <description>Header label</description>
      <posX>185</posX>
      <posY>28</posY>
      <width>500</width>
      <label>#header.label</label>	  
      <font>Segoe Light22</font>
      <textcolor>ff6aa5cb</textcolor>
      <animation effect="Fade" time="200">WindowOpen</animation>
      <animation effect="Fade" time="200">WindowClose</animation>
    </control>
	
    <control>
      <description>Screenshot</description>
      <type>image</type>
      <id>6</id>
      <posX>161</posX>
      <posY>400</posY>
      <width>359</width>
      <height>360</height>
      <texture />
      <align>center</align>
      <keepaspectratio>yes</keepaspectratio>
    </control>
	
    <control>
      <type>image</type>
      <id>1</id>
      <posX>969</posX>
      <posY>84</posY>
      <width>815</width>
      <height>98</height>
      <texture>dialogprogressbg.png</texture>
      <align>right</align>
      <visible>Control.HasFocus(50)</visible>
      <animation effect="slide" time="500" tween="quadratic" easing="out" reversible="false" start="697,0" end="0,0">visible</animation>
      <animation effect="slide" time="500" tween="quadratic" easing="out" reversible="false" end="697,0">hidden</animation>
    </control>
	
    <control>
      <description>Selected item Label</description>
      <type>fadelabel</type>
      <id>1</id>
      <posX>1026</posX>
      <posY>112</posY>
      <align>left</align>
      <label>#selecteditem</label>
      <font>font16</font>
      <visible>Control.HasFocus(50)</visible>
      <animation effect="slide" time="500" tween="quadratic" easing="out" reversible="false" start="697,0" end="0,0">visible</animation>
      <animation effect="slide" time="500" tween="quadratic" easing="out" reversible="false" end="697,0">hidden</animation>
    </control>
	
    <control>
      <description>action menu</description>
      <type>actiongroup</type>
      <dimColor>00ffffff</dimColor>
      <width>1920</width>
      <height>1080</height>
      <buttonX>0</buttonX>
      <buttonY>0</buttonY>
      <buttonwidth>0</buttonwidth>
      <buttonheight>0</buttonheight>
      <onexit>50</onexit>
      <defaultcontrol>2</defaultcontrol>
      <control>
        <id>0</id>
        <type>image</type>
        <colordiffuse>90ffffff</colordiffuse>
        <width>1920</width>
        <height>1080</height>
        <texture>semi_trans_back_general_menu.png</texture>
        <animation effect="Fade" time="200">WindowOpen</animation>
        <animation effect="Fade" time="400">WindowClose</animation>
      </control>
      <control>
        <type>group</type>
        <animation effect="fade" time="250">Visible</animation>
        <animation effect="zoom" delay="100" tween="elastic" easing="out" start="95,95" end="100,100" center="683,384" time="550">Visible</animation>
        <animation effect="fade" time="200">Hidden</animation>
        <animation effect="zoom" start="100,100" end="200,200" center="683,384" time="200">Hidden</animation>
        <control>
          <id>1</id>
          <type>image</type>
          <visible>!Control.HasFocus(50)</visible>
          <posX>720</posX>
          <posY>90</posY>
          <width>480</width>
          <height>900</height>
          <texture>menu_bg.png</texture>
        </control>
        <control>
          <id>1</id>
          <description>Heading text label</description>
          <type>label</type>
          <posX>796</posX>
          <posY>154</posY>
          <font>Segoe Light18</font>
          <textcolor>ff85cffe</textcolor>
          <label>924</label>
        </control>
        <control>
          <description>button group</description>
          <type>group</type>
          <posX>763</posX>
          <posY>246</posY>
          <layout>StackLayout(0, Vertical, true)</layout>
          <control>
            <description>View-As</description>
            <type>button</type>
            <id>2</id>
            <label>100</label>
            <width>392</width>
            <height>68</height>
            <textureFocus>hiddenmenu_item_selected.png</textureFocus>
            <textureNoFocus>hiddenmenu_item.png</textureNoFocus>
            <onright>50</onright>
            <onup>17</onup>
          </control>
          <control>
            <description>Switch View</description>
            <type>button</type>
            <id>4</id>
            <label>457</label>
            <width>392</width>
            <height>68</height>
            <textureFocus>hiddenmenu_item_selected.png</textureFocus>
            <textureNoFocus>hiddenmenu_item.png</textureNoFocus>
            <onright>50</onright>
            <ondown>3</ondown>
          </control>
          <control>
            <description>Refresh</description>
            <type>button</type>
            <id>3</id>
            <label>184</label>
            <width>392</width>
            <height>68</height>
            <textureFocus>hiddenmenu_item_selected.png</textureFocus>
            <textureNoFocus>hiddenmenu_item.png</textureNoFocus>
            <onright>50</onright>
            <ondown>99</ondown>
          </control>
        </control>
      </control>
    </control>
	
    <import>common.overlay.xml</import>
	
  </controls>
</window>