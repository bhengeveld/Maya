      <type>image</type>
      <id>1</id>
      <posX>631</posX>
      <posY>0</posY>
      <width>1227</width>
      <height>1080</height>
      <texture>fanart_widelist_bg.png</texture>
      <visible>facadeview.list+control.isvisible(91919293)</visible>
    </control>
	
    <control>
