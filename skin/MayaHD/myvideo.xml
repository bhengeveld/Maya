      <type>image</type>
      <id>1</id>
      <width>1920</width>
      <height>1080</height>
      <texture>fanart_overlay_filmstrip.png</texture>
      <visible>[facadeview.smallicons|facadeview.largeicons|facadeview.filmstrip] + control.isvisible(91919293)</visible>
    </control>
	
    <control>
      <description>BG</description>
      <type>image</type>
