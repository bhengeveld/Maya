<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<window>
  <allowoverlay>yes</allowoverlay>
  <controls>
 
    <control>
		<id>0</id>
		<type>label</type>
		<description>Header label</description>
		<posX>185</posX>
		<posY>28</posY>
		<width>600</width>
        <label>#(L(8)) - #(L(19100))</label>
		<font>Segoe Light22</font>
		<textcolor>ff6aa5cb</textcolor>
        <visible>string.equals(#WorldWeather.View,GeoClock)</visible> 
		<animation effect="Fade" time="200">WindowOpen</animation>
		<animation effect="Fade" time="200">WindowClose</animation>
    </control>
	
    <control>
      <description>GeoClock image</description>
      <type>image</type>
      <id>0</id>
      <posX>625</posX>
      <posY>210</posY>
      <width>1105</width>
      <height>660</height>
      <texture>#WorldWeather.ImageGeoClock</texture>
      <visible>string.equals(#WorldWeather.View,GeoClock)</visible>
      <animation effect="fade" time="250">WindowOpen</animation>
      <animation effect="fade" time="250">WindowClose</animation>	  
    </control>

    <control>
      <description>Overlay</description>
      <type>image</type>
      <id>1</id>
      <posX>505</posX>
      <posY>78</posY>
      <width>1355</width>
      <height>915</height>
      <texture>blackborders_pictures_filmstrip.png</texture>
      <visible>string.equals(#WorldWeather.View,GeoClock)</visible>
      <animation effect="fade" time="250">WindowOpen</animation>
      <animation effect="fade" time="250">WindowClose</animation>	  
    </control>
	
    <!-- *** Timzone description *** -->
	
	<control>
		<description>timezone description label</description>
		<type>fadelabel</type>
		<id>0</id>
    	<posX>1832</posX>
    	<posY>1010</posY>
    	<width>1000</width>
		<align>right</align>
		<font>font11</font>
		<textcolor>6aa5cb</textcolor>
		<label>#WorldWeather.LocationTimezoneDescription</label>
		<visible>string.equals(#WorldWeather.View,GeoClock)+!string.equals(#WorldWeather.ImageGeoClock, )</visible>
		<animation effect="fade" start="0" end="100" time="300" delay="350">WindowOpen</animation>
		<animation effect="fade" start="100" end="0" time="0" delay="0">WindowClose</animation>
		<animation effect="fade" start="0" end="100" time="300" delay="250" reversible="false">visible</animation>
	</control>
	
  </controls>
</window>