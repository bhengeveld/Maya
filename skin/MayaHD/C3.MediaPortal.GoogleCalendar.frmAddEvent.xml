<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<window>
  <id>80000</id>
  <defaultcontrol>3000</defaultcontrol>
  <allowoverlay>yes</allowoverlay>
  <define>#header.label:Google Calendar - Add Event</define>
  <define>#header.background:hover_C3.MediaPortal.GoogleCalendar.png</define>
  <controls>

    <!--            :: BACKGROUNDS ::           	 -->
	
    <control>
      <description>DEFAULT BACKGROUND</description>
      <type>image</type>
      <id>0</id>
      <posX>0</posX>
      <posY>0</posY>
      <width>1920</width>
      <height>1080</height>
      <texture>background.png</texture>
      <shouldCache>true</shouldCache>
    </control>
	
    <control>
      <description>Fanart Background</description>
      <type>image</type>
      <id>1</id>
      <posX>0</posX>
      <posY>0</posY>
      <width>1920</width>
      <height>1080</height>
      <texture>#header.background</texture>
      <visible>string.contains(#MayaHD.bgImage.Plugins,yes)</visible>
    </control>
	
    <control>
      <description>Fanart Overlay</description>
      <type>image</type>
      <id>1</id>
      <posX>0</posX>
      <posY>0</posY>
      <width>1920</width>
      <height>1080</height>
      <texture>basichome_fanart_overlay.png</texture>
      <visible>string.contains(#MayaHD.bgImage.Plugins,yes)</visible>
    </control>          
	
    <import>common.time.xml</import>

    <control>
      <id>1</id>
      <type>label</type>
      <description>Header label</description>
      <posX>185</posX>
      <posY>28</posY>
      <width>500</width>
      <label>#header.label</label>	  
      <font>Segoe Light22</font>
      <textcolor>ff6aa5cb</textcolor>
      <animation effect="Fade" time="200">WindowOpen</animation>
      <animation effect="Fade" time="200">WindowClose</animation>
    </control>
	
    <control>
      <description>button group</description>
      <type>group</type>
      <animation effect="fade" time="250">WindowOpen</animation>
      <animation effect="fade" time="250">WindowClose</animation>
      <posX>99</posX>
      <posY>170</posY>
      <layout>StackLayout</layout>
      <control>
        <description>OK Button</description>
        <type>button</type>
        <id>3000</id>
        <label>OK</label>
        <onright>10</onright>
        <onup>3001</onup>
        <ondown>3001</ondown>
        <onright>10</onright>
        <textalign>right</textalign>
      </control>
      <control>
        <description>Cancel</description>
        <type>button</type>
        <id>3001</id>
        <label>Cancel</label>
        <onup>3000</onup>
        <ondown>3000</ondown>
        <onright>10</onright>
        <textalign>right</textalign>
      </control>
    </control>

	
    <control>
      <description>input field labels group</description>
      <type>group</type>
      <posX>755</posX>
      <posY>230</posY>
      <layout>StackLayout</layout>
      <font>font12</font>

      <control>
        <description>lblTitle</description>
        <type>label</type>
        <id>3010</id>
        <width>300</width>
        <height>40</height>
        <label>Title</label>
        <align>right</align>
      </control>

      <control>
        <description>lblLocation</description>
        <type>label</type>
        <id>3012</id>
        <width>300</width>
        <height>40</height>
        <label>Location</label>
        <align>right</align>
      </control>

      <control>
        <description>lblStartTime</description>
        <type>label</type>
        <id>3016</id>
        <width>300</width>
        <height>40</height>
        <label>Start Date &amp; Time</label>
        <align>right</align>
      </control>

      <control>
        <description>lblEndTime</description>
        <type>label</type>
        <id>3018</id>
        <width>300</width>
        <height>40</height>
        <label>End Date &amp; Time</label>
        <align>right</align>
      </control>

      <control>
        <description>lblDescription</description>
        <type>label</type>
        <id>3020</id>
        <width>300</width>
        <height>40</height>
        <label>Description</label>
        <align>right</align>
      </control>
    </control>

    <control>
      <description>input fields group</description>
      <type>group</type>
      <posX>800</posX>
      <posY>230</posY>
      <layout>StackLayout</layout>
      <font>font12</font>

      <control>
        <description>txtTitle</description>
        <type>fadelabel</type>
        <id>3011</id>
        <width>450</width>
        <height>40</height>
        <label>Select F9 Context Menu to set ...</label>
        <align>left</align>
        <textcolor>ff00ff00</textcolor>
      </control>

      <control>
        <description>txtLocation</description>
        <type>fadelabel</type>
        <id>3013</id>
        <width>400</width>
        <height>40</height>
        <label></label>
        <align>left</align>
        <textcolor>ffffffff</textcolor>
      </control>

      <control>
        <description>txtStartTime</description>
        <type>fadelabel</type>
        <id>3015</id>
        <width>400</width>
        <height>40</height>
        <label></label>
        <align>left</align>
        <textcolor>ffffffff</textcolor>
      </control>

      <control>
        <description>txtEndTime</description>
        <type>fadelabel</type>
        <id>3017</id>
        <width>400</width>
        <height>40</height>
        <label></label>
        <align>left</align>
        <textcolor>ffffffff</textcolor>
      </control>

      <control>
        <description>txtDescription</description>
        <type>fadelabel</type>
        <id>3019</id>
        <width>400</width>
        <height>400</height>
        <label></label>
        <align>left</align>
        <textcolor>ffffffff</textcolor>
      </control>
    </control>

  </controls>
</window>
