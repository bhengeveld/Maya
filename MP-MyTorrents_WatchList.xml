<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<window>
  <id>5682</id>
  <defaultcontrol>5</defaultcontrol>
  <allowoverlay>no</allowoverlay>
  <define>#header.label:Torrent Watchlist</define>
  <define>#header.background:hover_mytorrents.png</define>
  <controls>
  
    <import>common.window.background.xml</import>
    <import>common.time.xml</import>
	
    <control>
      <id>1</id>
      <type>label</type>
      <description>Header label</description>
      <posX>185</posX>
      <posY>28</posY>
      <width>500</width>
      <label>#header.label</label>	  
      <font>Segoe Light22</font>
      <textcolor>ff6aa5cb</textcolor>
      <animation effect="Fade" time="200">WindowOpen</animation>
      <animation effect="Fade" time="200">WindowClose</animation>
    </control>
	
    <control>
      <id>1</id>
      <description>listcontrol background</description>
      <type>image</type>
      <visible>!facadeview.filmstrip + !facadeview.smallicons + !facadeview.largeicons</visible>
      <posX>736</posX>
      <posY>215</posY>
      <width>1019</width>
      <height>677</height>
      <texture>listcontrol_bg.png</texture>
      <animation effect="Fade" time="100">WindowOpen</animation>
      <animation effect="Fade" time="100">WindowClose</animation>
    </control>
	
    <control>
      <id>1</id>
      <description>listcontrol background info</description>
      <type>image</type>
      <visible>!facadeview.filmstrip + !facadeview.smallicons + !facadeview.largeicons</visible>
      <posX>736</posX>
      <posY>953</posY>
      <width>1019</width>
      <height>71</height>
      <texture>listcontrol_bg_info.png</texture>
      <animation effect="Fade" time="100">WindowOpen</animation>
      <animation effect="Fade" time="100">WindowClose</animation>
    </control>
	
    <control>
      <description>Number of Files Label</description>
      <type>label</type>
      <id>1</id>
      <posX>1709</posX>
      <posY>970</posY>
      <align>right</align>
      <label>#MyTorrents.Count Items</label>
      <textcolor>6aa5cb</textcolor>
      <animation effect="fade" time="200">WindowOpen</animation>
      <animation effect="fade" time="200">WindowClose</animation>
    </control>
	
    <control>
      <type>group</type>
      <description>group element</description>
      <animation effect="fade" time="200">WindowOpen</animation>
      <animation effect="fade" time="200">WindowClose</animation>
      <animation effect="zoom" easing="out" start="100,100" end="180,180" center="683,384" time="1000">WindowClose</animation>
      <control>
        <description>listcontrol</description>
        <type>listcontrol</type>
        <id>5</id>
        <onup>4</onup>
        <ondown>4</ondown>
        <scrollOffset>1</scrollOffset>
        <posX>736</posX>
        <posY>262</posY>
        <height>644</height>
        <spinPosX>787</spinPosX>
        <spinPosY>967</spinPosY>
        <spinAlign>left</spinAlign>
        <textXOff>30</textXOff>
        <dimColor>ffffffff</dimColor>
      </control>
    </control>
	
    <control>
      <description>button group</description>
      <type>group</type>
      <posX>99</posX>
      <posY>170</posY>
      <layout>StackLayout</layout>
      <animation effect="Fade" time="250">WindowOpen</animation>
      <animation effect="Fade" time="250">WindowClose</animation>
      <control>
        <description>Try Me</description>
        <type>button</type>
        <id>4</id>
        <label>Back</label>
        <onup>5</onup>
        <ondown>5</ondown>
        <textalign>RIGHT</textalign>
      </control>
    </control>
	
    <import>common.overlay.xml</import>
	
  </controls>
</window>